<%- include('partials/header') %>
<table>
    <tr>
        <th>Customer id</th>
        <th>Customer name</th>
        <th>Commodity</th>
        <th>Quality</th>
        <th>Quantity in kgs</th>
        <!-- <th>Collection point</th> -->
        <th>Action</th>
        
    
    </tr>
    <% for (let i of item) {%>
        <tr>
            <td><%= i.customer_id%></td>
            <td><%= i.customer_name%></td>
            <td><%= i.commodity%></td>
            <td><%= i.quality%></td>
            <td><%= i.quantity%></td>
            <!-- <td><%= i.collection_point%></td> -->
            <td>
                
                <a class = "btn edit" href="/order/<%= i.id %>">Edit</a>
                <!-- delete button -->
                <form action= "/remove/order/<%= i.id%>" method="post">
                    <input class = "btn delete" type="submit" value="Delete">
                </form>
            </td>
        </tr>
        
    <% }%>
</table>
    <form action="/order/store" method="POST">
        <input type="text" name="id" placeholder="Member Id"><br>
        <input type="text" name="name" placeholder="Customer name"><br>
        <input type="text" name="product" placeholder="Commodity"><br>
        <input type="text" name="quality" placeholder="Quality"><br>
        <input type="text" name="quantity" placeholder="Quantity"><br>
        <input type="text" name="collection" placeholder="Collection centre"><br>
        <button>Add Order</button>
    </form>
    </body>
</html>
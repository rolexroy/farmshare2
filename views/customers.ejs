<%- include('partials/header') %>

<div class="containers">
    <%- include('partials/sidebar') %>


<div class="table">

    <table class="table">
       
            <thead>
                <th>Name</th>
                <th>Email</th>
                <th>Phone NUmber</th>
            </thead>
            <tbody>
                <% for(let customer of customers){ %>
                <tr>
                
                <td><%= customer.name%></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone_number %></td>
               
                </tr>
                <%}%>
            </tbody>
       
    </table>
    
</div>

<div class="form">
    <h2>Add Customer</h2> 
    <form action='/customers' method="POST">
        <div class="form-group row">
            <label for="inputName4" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputName4" name="name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPhone4" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputPhone4" name="phoneNumber">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail4" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputEmail4" name="email">
            </div>
        </div>
        <div class="form-group row">
            <label for="submit"class="col-sm-2 col-form-label"></label>
            <div class="col-md-10">
                <button type="submit" class="btn">Submit</button>
            </div>
        </div>


   
    
    
    
</form>
</div>
</div>


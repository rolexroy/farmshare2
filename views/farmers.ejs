<%- include('partials/header') %>
    <div class="containers">
      <%- include('partials/sidebar') %>
      <div class="table thead-dark table-bordered"></div>
    </div>
   
    <script type="text/javascript" src="dist/js/tabulator.min.js"></script>
    <script type="text/javascript" src="dist/js/jquery_wrapper.min.js"></script>
    <script>
    

var table = new Tabulator(".table", {
 	height:'auto', // set height of table (in CSS or here), this enables the Virtual DOM and improves render speed dramatically (can be any valid css height value)
 	
    ajaxURL:'/farmers/farmers.json', //load data
 	// layout:"fitColumns", //fit columns to width of table (optional)
 	  columns:[ 	
    {title:"Member Id", field:"id"},
    {title:"Name", field:"name", width:150},
	 	{title:"GroupName", field:"groupName", hozAlign:"left",headerFilter:"input"},
	 	{title:"Telephone Number", field:"tel"},
	 	{title:"Plot Size", field:"plotsize", sorter:"date", hozAlign:"center"},
    {title:"Plot Nature", field:"plotnature"},
    {title:"Value Chain", field:"valuechain"},
    {title:"Investment(in Ksh.)", field:"investement"},
    {title:"Projected Harvest(in months)", field:"harvest"},
    {title:"Projected Weight(in kg)", field:"weight"},
  ],
 	rowClick:function(e, row){ //trigger an alert message when the row is clicked
 		alert("Row " + row.getData().id + " Clicked!!!!");
 	},
});

    </script>

   </body>
   </html>

<%- include('partials/header') %>
<div class="containers">
    <%- include('partials/sidebar') %>
<div class="table thead-dark">
    <% let totalPayment = 0 %>
    <% for(let item of items) {%>
    <% totalPayment += Number(item.payment) %>
    <% }%>
   
<table>
    <tr>
        <th>Order id</th>
        <th>Commodity</th>
        <th>Quality</th>
        <th>Quantity in kgs</th>
        <th>Payment</th>
        <th>Collection point</th>
       
        <th>Delivery Status</th>
        <th>Sum</th>
        <th>Action</th>
       
    
    </tr>
    
    <% for (let i of items) {%>
        <tr>
            <td><%= i.order_id%></td>
            <td><%= i.product%></td>
            <td><%= i.quality%></td>
            <td><%= i.quantity%></td>
            <td><%= i.payment%></td>
            <td><%= i.collection_point%></td>
           
            <td><%= i.delivery_status %></td>
            <%= totalPayment %>
            
            <td>
                <a class = "btn edit" href="/distribution/<%= i.order_id %>">Edit</a>
                
            </td>
        </tr>
    <% }%>
</table>
</div>
<div class="form">
    <form action="/distribution/store/form" method="POST">
        <div class="form-group row">
            <label for="product" class="col-sm-2 col-form-label">Commodity</label>
            <div class="col-sm-10">
                <input type="text" name="product" placeholder="Commodity"><br>
            </div>
        </div>
        <div class="form-group row">
            <label for="quality" class="col-sm-2 col-form-label">Quality</label>
            <div class="col-sm-10">
                <input type="text" name="quality" placeholder="Quality">
            </div>
        </div>
        <div class="form-group row">
            <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
            <div class="col-sm-10">
                <input type="text" name="quantity" placeholder="Quantity in kgs">
            </div>
        </div>
        <div class="form-group row">
            <label for="payment" class="col-sm-2 col-form-label">Payment</label>
            <div class="col-sm-10">
                <input type="text" name="payment" placeholder="Payment">
            </div>
        </div>
        <div class="form-group row">
            <label for="collection_point" class="col-sm-2 col-form-label">Quality</label>
            <div class="col-sm-10">
                <input type="text" name="collection_point" placeholder="Collection point">
            </div>
        </div>
        <div class="form-group row">
            <label for="collection_point" class="col-sm-2 col-form-label">Collection Point</label>
            <div class="col-sm-10">
                <input type="text" name="collection_point" placeholder="Collection point">
            </div>
        </div>
        <div class="form-group row">
            <label for="expected_date" class="col-sm-2 col-form-label">Expected Payment Date</label>
            <div class="col-sm-10">
                <input type="date" name="expected_date" placeholder="Expected payment date">
            </div>
        </div>
        <div class="form-group row">
            <label for="actual_date" class="col-sm-2 col-form-label">Expected Payment Date</label>
            <div class="col-sm-10">
                <input type="date" name="actual_date" placeholder="Actual payment date">
            </div>
        </div>
        <div class="form-group row">
            <label for="delivery" class="col-sm-2 col-form-label">Delivery Status</label>
            <div class="col-sm-10">
                <select name="delivery" class="form-control">
                    <option value="Delivered">Delivered</option>
                    <option value="Pending">Pending</option>
                </select>
            </div>
        </div>
        
        <div class="form-group row">
            <label for="groupName" class="col-sm-2 col-form-label">Group Name</label>
            <div class="col-sm-10">
                <select name="groupName" class="form-control">
                    <%for (let group of groups){ %>
                        <% if(group.groupName){ %>
                            <option value="<%= group.groupName %>"><%= group.groupName %></option>s
                        <%}%>
                    
                       
                    <%}%>
                </select>
            </div>
        </div>
        <button>Submit</button>
    </form>
</div>
</div>
    </body>
</html>
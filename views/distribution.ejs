<%- include('partials/header') %>
<div class="containers">
    <%- include('partials/sidebar') %>
<div class="table thead-dark">
   
   

</div>

<div class="form">
    <% for(let item of items) {%>
       
        <form action="/distribution/store/form" method="POST">

            <div class="form-group row">
                
                <label for="orderID"class="col-sm-2 col-form-label">Order Id</label>
                <div class="col-sm-10">
                    <input type="text" name="orderID" placeholder="Commodity" value="<%= item.id %>"><br>
                </div>
            </div>
            <div class="form-group row">

                <label for="product" class="col-sm-2 col-form-label">Commodity</label>
                <div class="col-sm-10">
                    <input type="text" name="product" placeholder="Commodity" value="<%= item.commodity %>"><br>
                </div>
            </div>
           
              
           
                <div class="form-group row">
                    <label for="quality" class="col-sm-2 col-form-label">Quality</label>
                    <div class="col-sm-10">
                        <input type="text" name="quality" placeholder="Quality" value = "<%= item.quality%>">
                    </div>
                </div>
         
           
            
            <div class="form-group row">
                <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
                <div class="col-sm-10">
                    <input type="text" name="quantity" placeholder="Quantity in kgs" value="<%= item.quantity %>">
                </div>
                <% if(error) {%>
                    <small>Value exceeding stock</small>
                <% } %>
            </div>
           
          
            <div class="form-group row">
                <label for="collection_point" class="col-sm-2 col-form-label">Collection Point</label>
                <div class="col-sm-10">
                    <input type="text" name="collection_point" placeholder="Collection point">
                </div>
            </div>
            
            <div class="form-group row">
                <label for="delivery" class="col-sm-2 col-form-label">Delivery Status</label>
                <div class="col-sm-10">
                    <select name="delivery" class="form-control">
                        <option value="Delivered">Delivered</option>
                        <option value="Pending">Pending</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group row">
                <label for="groupName" class="col-sm-2 col-form-label">Group Name</label>
                <div class="col-sm-10">
                    <select name="groupName" class="form-control">
                        <%for (let group of groups){ %>
                            <% if(group.groupName){ %>
                                <option value="<%= group.groupName %>"><%= group.groupName %></option>s
                            <%}%>
                        
                           
                        <%}%>
                    </select>
                </div>
            </div>
            <button>Submit</button>
        </form>
    <%}%>
   
</div>
</div>
    </body>
</html>